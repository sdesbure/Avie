%h2= t("devise.shared.edit")# + " #{resource.class.humanize}"

.well
  = simple_form_for(resource, :as => resource_name, 
  :url => registration_path(resource_name),
  :html => { :method => :put }) do |f|
    = devise_error_messages! 

    .form-inputs
      = f.input :email
      = f.input :name
      = f.input :password, :hint => t("devise.registrations.leave_blank")
      = f.input :password_confirmation
      = f.input :current_password, :hint => t("devise.registrations.current_password_label")

    .form-actions
      = f.submit t("devise.registrations.update")
%h3= t "devise.registrations.cancel_my_account"

%p 
  =t "devise.registrations.unhappy?" 
  = link_to t("devise.registrations.cancel_my_account"), registration_path(resource_name), :confirm => t("shared.confirm"), :method => :delete, :class => "btn btn-danger"

= link_to t("shared.back"), :back, :class => "btn"
