%ul.nav
  - if user_signed_in?
    %li
      = link_to( t('devise.shared.sign_up'), destroy_user_session_path, :method=>'delete')
  - else
    %li
      = link_to( t('devise.shared.sign_in'), new_user_session_path)
  - if user_signed_in?
    %li
      = link_to( t('devise.shared.edit'), edit_user_registration_path)
