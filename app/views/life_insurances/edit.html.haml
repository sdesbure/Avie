.span7
  %h1=t "editing.life_insurance"

  = render 'form'

  .btn-group
    - if can? :index, LifeInsurance
      = link_to life_insurances_path, :class => 'btn' do
        %i.icon-arrow-left
        =t 'shared.back'
    - else
      = link_to root_path, :class => 'btn' do
        %i.icon-user
        =t 'shared.back'
    - if can? :read, @life_insurance
      = link_to @life_insurance, :class => 'btn' do
        %i.icon-eye-open
        =t 'shared.show'

