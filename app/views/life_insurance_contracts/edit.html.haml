.span2
.span7
  %h1=t "editing.contract"

  = render 'form'

  .btn-group
    - if can? :index, LifeInsuranceContract
      = link_to life_insurance_contract_path, :class => 'btn' do
          %i.icon-arrow-left
          =t 'shared.back'  
    - else
      = link_to root_path, :class => 'btn' do
          %i.icon-user
          =t 'shared.back'
    - if can? :read, @life_insurance_contract
      = link_to @life_insurance_contract, :class => 'btn' do
          %i.icon-eye-open
          =t 'shared.show'

