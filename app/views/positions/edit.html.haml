.span2
.span7
  %h1=t "editing.position"

  = render 'form'

  .btn-group
    - if can? :index, Position
      = link_to positions_path, :class => 'btn' do
        %i.icon-arrow-left
        =t 'shared.back'  
    - else
      = link_to root_path, :class => 'btn' do
        %i.icon-user
        =t 'shared.back'
    - if can? :read, @position
      = link_to @position, :class => 'btn' do
        %i.icon-eye-open
        =t 'shared.show'
