.span2
.span7
  %h1=t "listing.brokers"
  .well
    %table.table.table-striped
      %thead
        %tr
          %th=t "name"
          %th=t "website"
          %th=t "nb_insurances"
          %th=t "nb_customers"
          - if can? :modify, Broker && @brokers.any?
            %th
      %tbody
        - @brokers.each do |broker|
          %tr
            %td= link_to broker.name, broker
            %td= link_to broker.website, broker.website
            %td= broker.life_insurances.count
            %td= broker.life_insurance_contracts.count
            - if can? :modify, broker
              %td
                - if can? :update, broker
                  = link_to t('shared.edit'), edit_broker_path(broker), :class => "btn"
                - if can? :destroy, broker
                  = link_to t('shared.destroy'), broker, :confirm => t('shared.confirm'), :method => :delete, :class => "btn btn-danger"

  %br

  - if can? :create, Broker
    = link_to t('new.broker'), new_broker_path, :class => "btn"
